        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.TestWPF"
        mc:Ignorable="d"
        Title="Отправка почты" Height="200" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Text="Почта успешно отправлена" FontWeight="Bold" FontSize="22" Margin="0, 30"/>
        <Button Content="OK" FontWeight="Bold" FontSize="20" Padding="40, 5" HorizontalAlignment="Center"  VerticalAlignment="Top" Click="Button_Click"/>

    </StackPanel>
</Window>
